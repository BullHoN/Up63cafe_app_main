<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_name"
            style="@style/item_text"
            android:text="Item Name"
            android:lines="2"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/add_button"
                android:background="@drawable/ic_group_24plus"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/quantity"
                android:text="1"
                android:paddingHorizontal="5dp"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/sub_button"
                android:background="@drawable/ic_group_23minus"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/half_plate_layout"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="₹25"
            android:id="@+id/half_plate_price"
            android:layout_gravity="center_horizontal"
            style="@style/fancy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/half_plate_button"
            android:textSize="12sp"
            style="@style/button_theme"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="64dp"
            android:minHeight="26dp"
            android:text="Half" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="₹50"
            android:id="@+id/full_plate_price"
            android:layout_gravity="center_horizontal"
            style="@style/fancy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/full_plate_button"
            style="@style/button_theme"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="64dp"
            android:text="Full" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            style="@style/item_text"
            android:fontFamily="@font/roboto_bold"
            android:text="Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/total"
            android:gravity="center_vertical"
            style="@style/fancy_text"
            android:fontFamily="@font/roboto_bold"
            android:text="₹25"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>